<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SplitIt-Home</title>
  
  <!-- Materialize CSS CDN -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
  
  <!-- Custom CSS (optional) -->
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

<!-- Navbar for Large Screens -->
<nav class="nav-wrapper blue">
  <div class="container">
    <a href="#" class="brand-logo">SplitIt</a>
    
    <!-- Navbar Links (visible on medium and large screens) -->
    <ul class="right hide-on-med-and-down">
      <li><a href="/">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>

    </ul>

    <!-- SideNav Trigger Icon (visible on small screens) -->
    <a href="#" data-target="mobile-nav" class="sidenav-trigger left hide-on-large-only">
      <i class="material-icons">&#9776</i>
    </a>
        <!-- Avatar Icon on Right Side for Mobile Screens -->
        <li class="avatar-mobile">
          <a href="/profile">
            <img src="https://via.placeholder.com/350" alt="User Avatar" class="avatar">
          </a>
        </li>

  </div>
</nav>

<!-- SideNav for Mobile Screens -->
<ul class="sidenav" id="mobile-nav">
  <li><a href="/">Home</a></li>
  <li><a href="/about">About</a></li>
  <li><a href="/contact">Contact</a></li>
</ul>


  <div class="container">
    <!-- Page Header -->
    <h1 class="center-align">Welcome to My Material-Inspired Website</h1>

    <!-- Button -->
    <div class="center-align">
      <a class="waves-effect waves-light btn blue">Get Started</a>
    </div>

    <!-- Card Component -->
    <div class="row">
      <div class="col s12 m6">
        <div class="card">
          <div class="card-image">
            <img src="https://via.placeholder.com/350">
            <span class="card-title">Card Title</span>
          </div>
          <div class="card-content">
            <p>This is an example of a card with Material Design elements, using Materialize CSS.</p>
          </div>
          <div class="card-action">
            <a href="#">Learn More</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="page-footer blue">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="white-text">Footer Content</h5>
          <p class="grey-text text-lighten-4">You can use this space to share some information about your website.</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- Materialize JavaScript (for interactive components) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const elems = document.querySelectorAll('.sidenav');
      M.Sidenav.init(elems);
    });

  </script>
</body>
</html>
